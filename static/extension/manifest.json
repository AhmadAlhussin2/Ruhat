{
    "manifest_version":3,
    "name": "Ruhat",
    "version": "1.0.0",
    "background":{
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["storage", "declarativeContent", "activeTab", "scripting"],
    "action":{
        "default_title": "Ruhat",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["shago/*.*"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["https://api.qrserver.com/v1/create-qr-code/*"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["popup.js"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["assets/exit.png"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["show_qr.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "externally_connectable": {
        "matches": ["http://127.0.0.1:5000/workspace"]
      }
}